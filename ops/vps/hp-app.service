[Unit]
Description=Honey App (docker compose)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/hp-app
ExecStart=/usr/bin/docker compose -f compose/docker-compose.prod.yml --env-file .env.prod up -d
ExecStop=/usr/bin/docker compose -f compose/docker-compose.prod.yml --env-file .env.prod down
TimeoutStartSec=0
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target
